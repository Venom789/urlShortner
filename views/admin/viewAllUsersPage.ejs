  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
    integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
    crossorigin="anonymous"
  ></script>
  <script>
    const token = "<%-userData.sub%>";
    const users_container = document.getElementById("users_container");
    const api_getAll_users = `http://localhost:3000/api/v1/getalluser`;

    const showLoginError = async () => {
      loginError.style.display = "block";
      setTimeout(function () {
        loginError.style.display = "none";
      }, 6000);
    };

    const showDupError = async () => {
      dupError.style.display = "block";
      setTimeout(function () {
        dupError.style.display = "none";
      }, 6000);
    };

    const showSuccess = async () => {
      success.style.display = "block";
      setTimeout(function () {
        success.style.display = "none";
      }, 6000);
    };

    const showRecentUrls = async () => {
      const urls = await getRecentUrls();
      const recentUrlsHTML = urls.map((item) => {
        const HTML = `
        <div class="url-box">
          <a href="${item.url}" target="_blank"> <h5>Url - ${item.url}</h5></a>
          <a href="${item.shortenUrl}" target="_blank"><h5>Shorten Url : ${item.shortenUrl}</h5></a>
          <h5>Clicks : ${item.clicks}</h5>
        </div>
        `;
        return HTML;
      });
      users_container.innerHTML = recentUrlsHTML;
    };

    const getRecentUrls = async () => {
      const resp = await fetch(api_getAll_urls + `/${token}?count=5`, {
        method: "GET",
        headers: { "Content-type": "application/json; charset=UTF-8" },
      });
      const resp_json = await resp.json();
      return resp_json;
    };
    showRecentUrls();

    shorten_url_btn.addEventListener("click", async () => {
      const isLogin = "<%-isLogin%>";
      if (!isLogin) {
        showLoginError();
      } else {
        const url = url_input.value;
        if (url.length) {
          url_input.disbled = true;
          shorten_url_btn.disbled = true;
          const resp = await fetch(api_shorten_url, {
            method: "POST",
            body: JSON.stringify({ url: url }),
            headers: { "Content-type": "application/json; charset=UTF-8" },
          });
          const resp_json = await resp.json();
          if (resp.status === 200) {
            //added
            url_input.value = "";
            showSuccess();
            showRecentUrls();
          } else if (resp.status === 401) {
            showLoginError();
          } else {
            showDupError();
          }
        }
      }
    });
  </script>
</html>